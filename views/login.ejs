<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Login</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>
  <main>
    <h1>Login</h1>
    <% if (error) { %>
      <p class="error">Login failed. Try admin@example.com / password123</p>
    <% } %>

    <form method="POST" action="/auth/login">
      <label>
        Email
        <input name="email" type="email" required value="admin@example.com" />
      </label>
      <label>
        Password
        <input name="password" type="password" required />
      </label>
      <button type="submit">Login</button>
    </form>
  </main>
</body>
</html>